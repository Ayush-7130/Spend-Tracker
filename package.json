{
  "name": "spend-tracker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "prepare": "husky install",
    "db:setup": "node scripts/unified-database-setup.js",
    "db:setup-no-seed": "node scripts/unified-database-setup.js --no-seed",
    "db:indexes": "node scripts/create-indexes.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "chart.js": "^4.5.0",
    "dotenv": "^17.2.3",
    "jose": "^6.1.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "next": "15.5.7",
    "qrcode": "^1.5.4",
    "react": "19.1.2",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.1.2",
    "resend": "^6.4.2",
    "speakeasy": "^2.0.0",
    "web-vitals": "^4.2.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/speakeasy": "^2.0.10",
    "critters": "^0.0.23",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5"
  }
}
